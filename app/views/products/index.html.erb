<h2>Cart:</h2>

<ul>
  <% cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>

<%= form_tag('/', method: 'post') do %>
  <input type="text" name="product" placeholder="Input Product Name">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value="add to cart">
<% end %>
